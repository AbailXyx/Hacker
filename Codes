local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local LocalPlayer = game:GetService("Players").LocalPlayer
local Mouse = LocalPlayer:GetMouse()
local HttpService = game:GetService("HttpService")

local NexusUI = {
	Elements = {},
	ThemeObjects = {},
	Connections = {},
	Flags = {},
	Themes = {
		Default = {
			Main = Color3.fromRGB(20, 20, 20),
			Second = Color3.fromRGB(30, 30, 35),
			Stroke = Color3.fromRGB(70, 0, 255),
			Divider = Color3.fromRGB(40, 40, 45),
			Text = Color3.fromRGB(240, 240, 240),
			TextDark = Color3.fromRGB(180, 180, 185)
		},
		Dark = {
			Main = Color3.fromRGB(15, 15, 15),
			Second = Color3.fromRGB(25, 25, 30),
			Stroke = Color3.fromRGB(0, 170, 255),
			Divider = Color3.fromRGB(35, 35, 40),
			Text = Color3.fromRGB(240, 240, 240),
			TextDark = Color3.fromRGB(170, 170, 175)
		}
	},
	SelectedTheme = "Default",
	Folder = nil,
	SaveCfg = false
}

--Feather Icons
local Icons = {}

local Success, Response = pcall(function()
	Icons = HttpService:JSONDecode(game:HttpGetAsync("https://raw.githubusercontent.com/evoincorp/lucideblox/master/src/modules/util/icons.json")).icons
end)

if not Success then
	warn("\nNexus Library - Failed to load Feather Icons. Error code: " .. Response .. "\n")
end	

local function GetIcon(IconName)
	if Icons[IconName] ~= nil then
		return Icons[IconName]
	else
		return nil
	end
end   

local Nexus = Instance.new("ScreenGui")
Nexus.Name = "Nexus"
if syn then
	syn.protect_gui(Nexus)
	Nexus.Parent = game.CoreGui
else
	Nexus.Parent = gethui() or game.CoreGui
end

if gethui then
	for _, Interface in ipairs(gethui():GetChildren()) do
		if Interface.Name == Nexus.Name and Interface ~= Nexus then
			Interface:Destroy()
		end
	end
else
	for _, Interface in ipairs(game.CoreGui:GetChildren()) do
		if Interface.Name == Nexus.Name and Interface ~= Nexus then
			Interface:Destroy()
		end
	end
end

function NexusUI:IsRunning()
	if gethui then
		return Nexus.Parent == gethui()
	else
		return Nexus.Parent == game:GetService("CoreGui")
	end
end

local function AddConnection(Signal, Function)
	if (not NexusUI:IsRunning()) then
		return
	end
	local SignalConnect = Signal:Connect(Function)
	table.insert(NexusUI.Connections, SignalConnect)
	return SignalConnect
end

task.spawn(function()
	while (NexusUI:IsRunning()) do
		wait()
	end

	for _, Connection in next, NexusUI.Connections do
		Connection:Disconnect()
	end
end)

local function AddDraggingFunctionality(DragPoint, Main)
	pcall(function()
		local Dragging, DragInput, MousePos, FramePos = false
		DragPoint.InputBegan:Connect(function(Input)
			if Input.UserInputType == Enum.UserInputType.MouseButton1 or Input.UserInputType == Enum.UserInputType.Touch then
				Dragging = true
				MousePos = Input.Position
				FramePos = Main.Position

				Input.Changed:Connect(function()
					if Input.UserInputState == Enum.UserInputState.End then
						Dragging = false
					end
				end)
			end
		end)
		DragPoint.InputChanged:Connect(function(Input)
			if Input.UserInputType == Enum.UserInputType.MouseMovement or Input.UserInputType == Enum.UserInputType.Touch then
				DragInput = Input
			end
		end)
		UserInputService.InputChanged:Connect(function(Input)
			if Input == DragInput and Dragging then
				local Delta = Input.Position - MousePos
				TweenService:Create(Main, TweenInfo.new(0.45, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {Position  = UDim2.new(FramePos.X.Scale,FramePos.X.Offset + Delta.X, FramePos.Y.Scale, FramePos.Y.Offset + Delta.Y)}):Play()
			end
		end)
	end)
end   

local function Create(Name, Properties, Children)
	local Object = Instance.new(Name)
	for i, v in next, Properties or {} do
		Object[i] = v
	end
	for i, v in next, Children or {} do
		v.Parent = Object
	end
	return Object
end

local function CreateElement(ElementName, ElementFunction)
	NexusUI.Elements[ElementName] = function(...)
		return ElementFunction(...)
	end
end

local function MakeElement(ElementName, ...)
	local NewElement = NexusUI.Elements[ElementName](...)
	return NewElement
end

local function SetProps(Element, Props)
	table.foreach(Props, function(Property, Value)
		Element[Property] = Value
	end)
	return Element
end

local function SetChildren(Element, Children)
	table.foreach(Children, function(_, Child)
		Child.Parent = Element
	end)
	return Element
end

local function Round(Number, Factor)
	local Result = math.floor(Number/Factor + (math.sign(Number) * 0.5)) * Factor
	if Result < 0 then Result = Result + Factor end
	return Result
end

local function ReturnProperty(Object)
	if Object:IsA("Frame") or Object:IsA("TextButton") then
		return "BackgroundColor3"
	end 
	if Object:IsA("ScrollingFrame") then
		return "ScrollBarImageColor3"
	end 
	if Object:IsA("UIStroke") then
		return "Color"
	end 
	if Object:IsA("TextLabel") or Object:IsA("TextBox") then
		return "TextColor3"
	end   
	if Object:IsA("ImageLabel") or Object:IsA("ImageButton") then
		return "ImageColor3"
	end   
end

local function AddThemeObject(Object, Type)
	if not NexusUI.ThemeObjects[Type] then
		NexusUI.ThemeObjects[Type] = {}
	end    
	table.insert(NexusUI.ThemeObjects[Type], Object)
	Object[ReturnProperty(Object)] = NexusUI.Themes[NexusUI.SelectedTheme][Type]
	return Object
end    

local function SetTheme()
	for Name, Type in pairs(NexusUI.ThemeObjects) do
		for _, Object in pairs(Type) do
			Object[ReturnProperty(Object)] = NexusUI.Themes[NexusUI.SelectedTheme][Name]
		end    
	end    
end

local function PackColor(Color)
	return {R = Color.R * 255, G = Color.G * 255, B = Color.B * 255}
end    

local function UnpackColor(Color)
	return Color3.fromRGB(Color.R, Color.G, Color.B)
end

local function LoadCfg(Config)
	local Data = HttpService:JSONDecode(Config)
	table.foreach(Data, function(a,b)
		if NexusUI.Flags[a] then
			spawn(function() 
				if NexusUI.Flags[a].Type == "Colorpicker" then
					NexusUI.Flags[a]:Set(UnpackColor(b))
				else
					NexusUI.Flags[a]:Set(b)
				end    
			end)
		else
			warn("Nexus Library Config Loader - Could not find ", a ,b)
		end
	end)
end

local function SaveCfg(Name)
	local Data = {}
	for i,v in pairs(NexusUI.Flags) do
		if v.Save then
			if v.Type == "Colorpicker" then
				Data[i] = PackColor(v.Value)
			else
				Data[i] = v.Value
			end
		end	
	end
	writefile(NexusUI.Folder .. "/" .. Name .. ".txt", tostring(HttpService:JSONEncode(Data)))
end

local WhitelistedMouse = {Enum.UserInputType.MouseButton1, Enum.UserInputType.MouseButton2,Enum.UserInputType.MouseButton3,Enum.UserInputType.Touch}
local BlacklistedKeys = {Enum.KeyCode.Unknown,Enum.KeyCode.W,Enum.KeyCode.A,Enum.KeyCode.S,Enum.KeyCode.D,Enum.KeyCode.Up,Enum.KeyCode.Left,Enum.KeyCode.Down,Enum.KeyCode.Right,Enum.KeyCode.Slash,Enum.KeyCode.Tab,Enum.KeyCode.Backspace,Enum.KeyCode.Escape}

local function CheckKey(Table, Key)
	for _, v in next, Table do
		if v == Key then
			return true
		end
	end
end

CreateElement("Corner", function(Scale, Offset)
	local Corner = Create("UICorner", {
		CornerRadius = UDim.new(Scale or 0, Offset or 10)
	})
	return Corner
end)

CreateElement("Stroke", function(Color, Thickness)
	local Stroke = Create("UIStroke", {
		Color = Color or Color3.fromRGB(255, 255, 255),
		Thickness = Thickness or 1
	})
	return Stroke
end)

CreateElement("List", function(Scale, Offset)
	local List = Create("UIListLayout", {
		SortOrder = Enum.SortOrder.LayoutOrder,
		Padding = UDim.new(Scale or 0, Offset or 0)
	})
	return List
end)

CreateElement("Padding", function(Bottom, Left, Right, Top)
	local Padding = Create("UIPadding", {
		PaddingBottom = UDim.new(0, Bottom or 4),
		PaddingLeft = UDim.new(0, Left or 4),
		PaddingRight = UDim.new(0, Right or 4),
		PaddingTop = UDim.new(0, Top or 4)
	})
	return Padding
end)

CreateElement("TFrame", function()
	local TFrame = Create("Frame", {
		BackgroundTransparency = 1
	})
	return TFrame
end)

CreateElement("Frame", function(Color)
	local Frame = Create("Frame", {
		BackgroundColor3 = Color or Color3.fromRGB(255, 255, 255),
		BorderSizePixel = 0
	})
	return Frame
end)

CreateElement("RoundFrame", function(Color, Scale, Offset)
	local Frame = Create("Frame", {
		BackgroundColor3 = Color or Color3.fromRGB(255, 255, 255),
		BorderSizePixel = 0
	}, {
		Create("UICorner", {
			CornerRadius = UDim.new(Scale, Offset)
		})
	})
	return Frame
end)

CreateElement("Button", function()
	local Button = Create("TextButton", {
		Text = "",
		AutoButtonColor = false,
		BackgroundTransparency = 1,
		BorderSizePixel = 0
	})
	return Button
end)

CreateElement("ScrollFrame", function(Color, Width)
	local ScrollFrame = Create("ScrollingFrame", {
		BackgroundTransparency = 1,
		MidImage = "rbxassetid://7445543667",
		BottomImage = "rbxassetid://7445543667",
		TopImage = "rbxassetid://7445543667",
		ScrollBarImageColor3 = Color,
		BorderSizePixel = 0,
		ScrollBarThickness = Width,
		CanvasSize = UDim2.new(0, 0, 0, 0)
	})
	return ScrollFrame
end)

CreateElement("Image", function(ImageID)
	local ImageNew = Create("ImageLabel", {
		Image = ImageID,
		BackgroundTransparency = 1
	})

	if GetIcon(ImageID) ~= nil then
		ImageNew.Image = GetIcon(ImageID)
	end	

	return ImageNew
end)

CreateElement("ImageButton", function(ImageID)
	local Image = Create("ImageButton", {
		Image = ImageID,
		BackgroundTransparency = 1
	})
	return Image
end)

CreateElement("Label", function(Text, TextSize, Transparency)
	local Label = Create("TextLabel", {
		Text = Text or "",
		TextColor3 = Color3.fromRGB(240, 240, 240),
		TextTransparency = Transparency or 0,
		TextSize = TextSize or 15,
		Font = Enum.Font.Gotham,
		RichText = true,
		BackgroundTransparency = 1,
		TextXAlignment = Enum.TextXAlignment.Left
	})
	return Label
end)

local NotificationHolder = SetProps(SetChildren(MakeElement("TFrame"), {
	SetProps(MakeElement("List"), {
		HorizontalAlignment = Enum.HorizontalAlignment.Center,
		SortOrder = Enum.SortOrder.LayoutOrder,
		VerticalAlignment = Enum.VerticalAlignment.Bottom,
		Padding = UDim.new(0, 5)
	})
}), {
	Position = UDim2.new(1, -25, 1, -25),
	Size = UDim2.new(0, 300, 1, -25),
	AnchorPoint = Vector2.new(1, 1),
	Parent = Nexus
})

function NexusUI:MakeNotification(NotificationConfig)
	spawn(function()
		NotificationConfig.Name = NotificationConfig.Name or "Notification"
		NotificationConfig.Content = NotificationConfig.Content or "Test"
		NotificationConfig.Image = NotificationConfig.Image or "rbxassetid://4384403532"
		NotificationConfig.Time = NotificationConfig.Time or 15

		local NotificationParent = SetProps(MakeElement("TFrame"), {
			Size = UDim2.new(1, 0, 0, 0),
			AutomaticSize = Enum.AutomaticSize.Y,
			Parent = NotificationHolder
		})

		local NotificationFrame = SetChildren(SetProps(MakeElement("RoundFrame", Color3.fromRGB(25, 25, 25), 0, 12), {
			Parent = NotificationParent, 
			Size = UDim2.new(1, 0, 0, 0),
			Position = UDim2.new(1, -55, 0, 0),
			BackgroundTransparency = 0,
			AutomaticSize = Enum.AutomaticSize.Y
		}), {
			MakeElement("Stroke", Color3.fromRGB(70, 0, 255), 1.2),
			MakeElement("Padding", 12, 12, 12, 12),
			SetProps(MakeElement("Image", NotificationConfig.Image), {
				Size = UDim2.new(0, 20, 0, 20),
				ImageColor3 = Color3.fromRGB(240, 240, 240),
				Name = "Icon"
			}),
			SetProps(MakeElement("Label", NotificationConfig.Name, 15), {
				Size = UDim2.new(1, -30, 0, 20),
				Position = UDim2.new(0, 30, 0, 0),
				Font = Enum.Font.GothamBold,
				Name = "Title"
			}),
			SetProps(MakeElement("Label", NotificationConfig.Content, 14), {
				Size = UDim2.new(1, 0, 0, 0),
				Position = UDim2.new(0, 0, 0, 25),
				Font = Enum.Font.GothamSemibold,
				Name = "Content",
				AutomaticSize = Enum.AutomaticSize.Y,
				TextColor3 = Color3.fromRGB(200, 200, 200),
				TextWrapped = true
			})
		})

		TweenService:Create(NotificationFrame, TweenInfo.new(0.5, Enum.EasingStyle.Quint), {Position = UDim2.new(0, 0, 0, 0)}):Play()

		wait(NotificationConfig.Time)
		
		-- Fade out animasi
		TweenService:Create(NotificationFrame.Icon, TweenInfo.new(0.3, Enum.EasingStyle.Quad), {ImageTransparency = 1}):Play()
		TweenService:Create(NotificationFrame.Title, TweenInfo.new(0.3, Enum.EasingStyle.Quad), {TextTransparency = 1}):Play()
		TweenService:Create(NotificationFrame.Content, TweenInfo.new(0.3, Enum.EasingStyle.Quad), {TextTransparency = 1}):Play()
		TweenService:Create(NotificationFrame.UIStroke, TweenInfo.new(0.3, Enum.EasingStyle.Quad), {Transparency = 1}):Play()
		TweenService:Create(NotificationFrame, TweenInfo.new(0.3, Enum.EasingStyle.Quad), {BackgroundTransparency = 1}):Play()
		
		wait(0.3) -- Tunggu animasi fade out selesai
		
		-- Slide out ke kanan
		TweenService:Create(NotificationFrame, TweenInfo.new(0.5, Enum.EasingStyle.Quad), {
			Position = UDim2.new(1, 20, 0, 0)
		}):Play()
		
		wait(0.5) -- Tunggu animasi slide out selesai
		
		-- Hapus notifikasi
		NotificationParent:Destroy()
	end)
end    

function NexusUI:Init()
	if NexusUI.SaveCfg then	
		pcall(function()
			if isfile(NexusUI.Folder .. "/" .. game.GameId .. ".txt") then
				LoadCfg(readfile(NexusUI.Folder .. "/" .. game.GameId .. ".txt"))
				NexusUI:MakeNotification({
					Name = "Configuration",
					Content = "Auto-loaded configuration for the game " .. game.GameId .. ".",
					Time = 5
				})
			end
		end)		
	end	
end	

function NexusUI:MakeWindow(WindowConfig)
	local FirstTab = true
	local Minimized = false
	local Loaded = false
	local UIHidden = false

	WindowConfig = WindowConfig or {}
	WindowConfig.Name = WindowConfig.Name or "Nexus UI"
	WindowConfig.ConfigFolder = WindowConfig.ConfigFolder or WindowConfig.Name
	WindowConfig.SaveConfig = WindowConfig.SaveConfig or false
	WindowConfig.HidePremium = WindowConfig.HidePremium or false
	if WindowConfig.IntroEnabled == nil then
		WindowConfig.IntroEnabled = true
	end
	WindowConfig.IntroText = WindowConfig.IntroText or "Nexus UI"
	WindowConfig.CloseCallback = WindowConfig.CloseCallback or function() end
	WindowConfig.ShowIcon = WindowConfig.ShowIcon or false
	WindowConfig.Icon = WindowConfig.Icon or "rbxassetid://8834748103"
	WindowConfig.IntroIcon = WindowConfig.IntroIcon or "rbxassetid://8834748103"
	NexusUI.Folder = WindowConfig.ConfigFolder
	NexusUI.SaveCfg = WindowConfig.SaveConfig

	if WindowConfig.SaveConfig then
		if not isfolder(WindowConfig.ConfigFolder) then
			makefolder(WindowConfig.ConfigFolder)
		end	
	end

	-- ==============================================
	-- BUAT MAIN WINDOW DENGAN DESAIN BARU
	-- ==============================================
	local MainContainer = Instance.new("ImageLabel")
	MainContainer.Name = "MainContainer"
	MainContainer.Image = "http://www.roblox.com/asset/?id=78218407205334"
	MainContainer.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
	MainContainer.BorderSizePixel = 0
	MainContainer.Size = UDim2.new(0, 536, 0, 282)
	MainContainer.Position = UDim2.new(0.5, -268, 0.5, -141)
	MainContainer.ClipsDescendants = true
	MainContainer.Parent = Nexus
	
	local UICorner = Instance.new("UICorner", MainContainer)
	UICorner.CornerRadius = UDim.new(0, 8)
	
	local UIStroke = Instance.new("UIStroke", MainContainer)
	UIStroke.Thickness = 2
	UIStroke.Color = Color3.fromRGB(255, 0, 0)
	
	-- Garis vertikal merah (pemisah tab)
	local VerticalLine = Instance.new("Frame", MainContainer)
	VerticalLine.BorderSizePixel = 0
	VerticalLine.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
	VerticalLine.Size = UDim2.new(0, 2, 0, 226)
	VerticalLine.Position = UDim2.new(0, 130, 0, 56)
	
	-- Garis horizontal merah (pemisah header)
	local HorizontalLine = Instance.new("Frame", MainContainer)
	HorizontalLine.BorderSizePixel = 0
	HorizontalLine.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
	HorizontalLine.Size = UDim2.new(0, 536, 0, 2)
	HorizontalLine.Position = UDim2.new(0, 0, 0, 52)
	
	-- Area konten utama (kanan)
	local ContentScroll = Instance.new("ScrollingFrame", MainContainer)
	ContentScroll.BorderSizePixel = 0
	ContentScroll.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
	ContentScroll.Size = UDim2.new(0, 404, 0, 232)
	ContentScroll.ScrollBarImageColor3 = Color3.fromRGB(255, 0, 0)
	ContentScroll.Position = UDim2.new(0, 130, 0, 52)
	ContentScroll.ScrollBarThickness = 5
	ContentScroll.BackgroundTransparency = 1
	ContentScroll.CanvasSize = UDim2.new(0, 0, 0, 0)
	ContentScroll.Name = "ContentScroll"
	
	local UIPadding = Instance.new("UIPadding", ContentScroll)
	UIPadding.PaddingLeft = UDim.new(0, 12)
	UIPadding.PaddingRight = UDim.new(0, 12)
	UIPadding.PaddingTop = UDim.new(0, 12)
	UIPadding.PaddingBottom = UDim.new(0, 12)
	
	-- Area tab (kiri)
	local TabScroll = Instance.new("ScrollingFrame", MainContainer)
	TabScroll.BorderSizePixel = 0
	TabScroll.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
	TabScroll.Size = UDim2.new(0, 130, 0, 232)
	TabScroll.ScrollBarImageColor3 = Color3.fromRGB(255, 0, 0)
	TabScroll.Position = UDim2.new(0, 0, 0, 52)
	TabScroll.ScrollBarThickness = 5
	TabScroll.BackgroundTransparency = 1
	TabScroll.CanvasSize = UDim2.new(0, 0, 0, 0)
	TabScroll.Name = "TabScroll"
	
	local TabList = Instance.new("UIListLayout", TabScroll)
	TabList.SortOrder = Enum.SortOrder.LayoutOrder
	TabList.Padding = UDim.new(0, 8)
	
	local TabPadding = Instance.new("UIPadding", TabScroll)
	TabPadding.PaddingLeft = UDim.new(0, 8)
	TabPadding.PaddingRight = UDim.new(0, 8)
	TabPadding.PaddingTop = UDim.new(0, 8)
	TabPadding.PaddingBottom = UDim.new(0, 8)

	-- Header dengan title
	local HeaderFrame = Instance.new("Frame", MainContainer)
	HeaderFrame.BorderSizePixel = 0
	HeaderFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
	HeaderFrame.Size = UDim2.new(1, 0, 0, 52)
	HeaderFrame.Name = "Header"
	
	-- Title
	local TitleLabel = Instance.new("TextLabel", HeaderFrame)
	TitleLabel.BorderSizePixel = 0
	TitleLabel.TextSize = 20
	TitleLabel.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
	TitleLabel.FontFace = Font.new("rbxasset://fonts/families/GothamSSm.json", Enum.FontWeight.Black, Enum.FontStyle.Normal)
	TitleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
	TitleLabel.BackgroundTransparency = 1
	TitleLabel.Size = UDim2.new(1, -100, 1, 0)
	TitleLabel.Position = UDim2.new(0, 25, 0, 0)
	TitleLabel.Text = WindowConfig.Name
	TitleLabel.TextXAlignment = Enum.TextXAlignment.Left
	
	-- Close/Minimize buttons container
	local ControlButtons = Instance.new("Frame", HeaderFrame)
	ControlButtons.BorderSizePixel = 0
	ControlButtons.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
	ControlButtons.Size = UDim2.new(0, 70, 0, 30)
	ControlButtons.Position = UDim2.new(1, -80, 0, 10)
	
	local ControlCorner = Instance.new("UICorner", ControlButtons)
	ControlCorner.CornerRadius = UDim.new(0, 7)
	
	local ControlStroke = Instance.new("UIStroke", ControlButtons)
	ControlStroke.Color = Color3.fromRGB(255, 0, 0)
	ControlStroke.Thickness = 1
	
	local ControlDivider = Instance.new("Frame", ControlButtons)
	ControlDivider.BorderSizePixel = 0
	ControlDivider.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
	ControlDivider.Size = UDim2.new(0, 1, 1, 0)
	ControlDivider.Position = UDim2.new(0.5, 0, 0, 0)
	
	-- Tombol Close
	local CloseBtn = Instance.new("TextButton", ControlButtons)
	CloseBtn.Size = UDim2.new(0.5, 0, 1, 0)
	CloseBtn.Position = UDim2.new(0.5, 0, 0, 0)
	CloseBtn.BackgroundTransparency = 1
	CloseBtn.Text = ""
	
	local CloseIcon = Instance.new("ImageLabel", CloseBtn)
	CloseIcon.Size = UDim2.new(0, 18, 0, 18)
	CloseIcon.Position = UDim2.new(0, 9, 0, 6)
	CloseIcon.Image = "rbxassetid://7072725342"
	CloseIcon.BackgroundTransparency = 1
	CloseIcon.ImageColor3 = Color3.fromRGB(255, 255, 255)
	
	-- Tombol Minimize
	local MinimizeBtn = Instance.new("TextButton", ControlButtons)
	MinimizeBtn.Size = UDim2.new(0.5, 0, 1, 0)
	MinimizeBtn.BackgroundTransparency = 1
	MinimizeBtn.Text = ""
	
	local MinimizeIcon = Instance.new("ImageLabel", MinimizeBtn)
	MinimizeIcon.Size = UDim2.new(0, 18, 0, 18)
	MinimizeIcon.Position = UDim2.new(0, 9, 0, 6)
	MinimizeIcon.Image = "rbxassetid://7072719338"
	MinimizeIcon.BackgroundTransparency = 1
	MinimizeIcon.ImageColor3 = Color3.fromRGB(255, 255, 255)
	MinimizeIcon.Name = "Ico"
	
	-- Drag area
	local DragPoint = Instance.new("Frame", HeaderFrame)
	DragPoint.Size = UDim2.new(1, -100, 1, 0)
	DragPoint.BackgroundTransparency = 1
	DragPoint.Name = "DragPoint"

	-- Store tabs for search functionality
	local TabButtons = {}

	-- Update TabHolder connection untuk canvas size
	AddConnection(TabList:GetPropertyChangedSignal("AbsoluteContentSize"), function()
		TabScroll.CanvasSize = UDim2.new(0, 0, 0, TabList.AbsoluteContentSize.Y + 16)
	end)

	AddDraggingFunctionality(DragPoint, MainContainer)

	AddConnection(CloseBtn.MouseButton1Up, function()
		MainContainer.Visible = false
		UIHidden = true
		NexusUI:MakeNotification({
			Name = "Interface Hidden",
			Content = "Tap RightShift to reopen the interface",
			Time = 5
		})
		if WindowConfig.CloseCallback then
			WindowConfig.CloseCallback()
		end
	end)

	AddConnection(UserInputService.InputBegan, function(Input)
		if Input.KeyCode == Enum.KeyCode.RightShift and UIHidden then
			MainContainer.Visible = true
		end
	end)

	AddConnection(MinimizeBtn.MouseButton1Up, function()
		if Minimized then
			TweenService:Create(MainContainer, TweenInfo.new(0.5, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {Size = UDim2.new(0, 536, 0, 282)}):Play()
			MinimizeIcon.Image = "rbxassetid://7072719338"
			wait(.02)
			MainContainer.ClipsDescendants = false
			ContentScroll.Visible = true
			TabScroll.Visible = true
			HorizontalLine.Visible = true
			VerticalLine.Visible = true
		else
			MainContainer.ClipsDescendants = true
			HorizontalLine.Visible = false
			VerticalLine.Visible = false
			MinimizeIcon.Image = "rbxassetid://7072720870"

			TweenService:Create(MainContainer, TweenInfo.new(0.5, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {Size = UDim2.new(0, TitleLabel.TextBounds.X + 140, 0, 52)}):Play()
			wait(0.1)
			ContentScroll.Visible = false
			TabScroll.Visible = false
		end
		Minimized = not Minimized    
	end)

	local function LoadSequence()
		MainContainer.Visible = false
		
		-- ====== CONFIG ======
		local GUI_NAME = "NexusUI"
		local FULL_TEXT = "Nexus\nUI"
		local TYPE_SPEED = 0.05
		local SHOW_DELAY = 0.5
		local HIDE_DELAY = 1.5
		
		-- ====== CREATE GUI ======
		local ScreenGui = Instance.new("ScreenGui")
		ScreenGui.Name = GUI_NAME
		ScreenGui.Parent = Nexus
		
		-- FRAME
		local Frame = Instance.new("Frame", ScreenGui)
		Frame.Name = "FrameAnimasi"
		Frame.Size = UDim2.new(0,150,0,44)
		Frame.Position = UDim2.new(0.5,-75,0.4,0)
		Frame.BackgroundColor3 = Color3.fromRGB(20,20,20)
		Frame.BorderSizePixel = 0
		Frame.BackgroundTransparency = 1
		
		-- Add corner
		local UICorner = Instance.new("UICorner", Frame)
		UICorner.CornerRadius = UDim.new(0, 8)
		
		-- GRADIENT
		local Gradient = Instance.new("UIGradient", Frame)
		Gradient.Color = ColorSequence.new{
			ColorSequenceKeypoint.new(0, Color3.fromRGB(30,30,30)),
			ColorSequenceKeypoint.new(1, Color3.fromRGB(10,10,10))
		}
		
		-- STROKE
		local Stroke = Instance.new("UIStroke", Frame)
		Stroke.Color = Color3.fromRGB(255,60,60)
		Stroke.Thickness = 2
		Stroke.Transparency = 1
		
		-- ICON
		local Image = Instance.new("ImageLabel", Frame)
		Image.Size = UDim2.new(0,34,0,34)
		Image.Position = UDim2.new(0,6,0.5,-17)
		Image.Image = "rbxassetid://82528573041751"
		Image.BackgroundTransparency = 1
		Image.ImageTransparency = 1
		
		local ImageCorner = Instance.new("UICorner", Image)
		ImageCorner.CornerRadius = UDim.new(0, 6)
		
		-- LINE
		local Line = Instance.new("Frame", Frame)
		Line.Size = UDim2.new(0,2,1,-8)
		Line.Position = UDim2.new(0,48,0,4)
		Line.BackgroundColor3 = Color3.fromRGB(255,60,60)
		Line.BorderSizePixel = 0
		Line.BackgroundTransparency = 1
		
		-- TEXT
		local Text = Instance.new("TextLabel", Frame)
		Text.Position = UDim2.new(0,54,0,4)
		Text.Size = UDim2.new(1,-58,1,-8)
		Text.BackgroundTransparency = 1
		Text.TextColor3 = Color3.fromRGB(255,255,255)
		Text.Font = Enum.Font.GothamBold
		Text.TextSize = 16
		Text.TextWrapped = true
		Text.TextXAlignment = Enum.TextXAlignment.Center
		Text.TextYAlignment = Enum.TextYAlignment.Center
		Text.TextTransparency = 1
		Text.Text = ""
		
		-- posisi awal
		Frame.Position = Frame.Position + UDim2.new(0,-50,0,0)
		
		local InInfo = TweenInfo.new(0.6, Enum.EasingStyle.Quint, Enum.EasingDirection.Out)
		local OutInfo = TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.In)
		
		local function tween(obj, info, props)
			TweenService:Create(obj, info, props):Play()
		end
		
		local function typeText(label, text, speed)
			label.Text = ""
			label.TextTransparency = 0
			for i = 1, #text do
				label.Text = string.sub(text,1,i)
				task.wait(speed)
			end
		end
		
		task.wait(SHOW_DELAY)
		
		Frame.Visible = true
		tween(Frame, InInfo, {
			BackgroundTransparency = 0,
			Position = Frame.Position + UDim2.new(0,50,0,0)
		})
		
		tween(Stroke, InInfo, {Transparency = 0})
		tween(Image, InInfo, {ImageTransparency = 0})
		tween(Line, InInfo, {BackgroundTransparency = 0})
		
		task.wait(0.5)
		typeText(Text, FULL_TEXT, TYPE_SPEED)
		
		task.wait(HIDE_DELAY)
		
		tween(Text, OutInfo, {TextTransparency = 1})
		tween(Image, OutInfo, {ImageTransparency = 1})
		tween(Line, OutInfo, {BackgroundTransparency = 1})
		tween(Stroke, OutInfo, {Transparency = 1})
		tween(Frame, OutInfo, {
			BackgroundTransparency = 1,
			Position = Frame.Position + UDim2.new(0,30,0,0)
		})
		
		task.wait(0.6)
		if ScreenGui then
			ScreenGui:Destroy()
		end
		
		MainContainer.Visible = true
	end

	if WindowConfig.IntroEnabled then
		LoadSequence()
	end	

	local TabFunction = {}
	function TabFunction:MakeTab(TabConfig)
		TabConfig = TabConfig or {}
		TabConfig.Name = TabConfig.Name or "Tab"
		TabConfig.Icon = TabConfig.Icon or ""
		TabConfig.PremiumOnly = TabConfig.PremiumOnly or false

		-- Create tab button dengan desain sederhana
		local TabButton = Instance.new("TextButton", TabScroll)
		TabButton.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
		TabButton.BorderSizePixel = 0
		TabButton.Size = UDim2.new(1, -16, 0, 32)
		TabButton.Text = ""
		TabButton.AutoButtonColor = false
		TabButton.BackgroundTransparency = 0.7
		
		local TabCorner = Instance.new("UICorner", TabButton)
		TabCorner.CornerRadius = UDim.new(0, 6)
		
		local TabStroke = Instance.new("UIStroke", TabButton)
		TabStroke.Color = Color3.fromRGB(255, 0, 0)
		TabStroke.Thickness = 1
		
		-- Icon jika ada
		if TabConfig.Icon ~= "" then
			local TabIcon = Instance.new("ImageLabel", TabButton)
			TabIcon.Size = UDim2.new(0, 18, 0, 18)
			TabIcon.Position = UDim2.new(0, 10, 0.5, -9)
			TabIcon.Image = TabConfig.Icon
			TabIcon.BackgroundTransparency = 1
			TabIcon.ImageTransparency = 0.4
			TabIcon.ImageColor3 = Color3.fromRGB(255, 255, 255)
		end
		
		-- Text label
		local TabLabel = Instance.new("TextLabel", TabButton)
		if TabConfig.Icon ~= "" then
			TabLabel.Size = UDim2.new(1, -35, 1, 0)
			TabLabel.Position = UDim2.new(0, 35, 0, 0)
		else
			TabLabel.Size = UDim2.new(1, -12, 1, 0)
			TabLabel.Position = UDim2.new(0, 12, 0, 0)
		end
		TabLabel.BackgroundTransparency = 1
		TabLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
		TabLabel.Font = Enum.Font.GothamSemibold
		TabLabel.TextSize = 14
		TabLabel.Text = TabConfig.Name
		TabLabel.TextTransparency = 0.4
		TabLabel.TextXAlignment = Enum.TextXAlignment.Left
		TabLabel.Name = "Title"
		
		-- Store tab for search functionality
		TabButtons[TabConfig.Name] = TabButton

		-- Create content container untuk tab ini (pakai sistem Nexus UI yang lama)
		local Container = AddThemeObject(SetChildren(SetProps(MakeElement("ScrollFrame", Color3.fromRGB(255, 0, 0), 5), {
			Size = UDim2.new(1, 0, 1, 0),
			Position = UDim2.new(0, 0, 0, 0),
			Parent = ContentScroll,
			Visible = false,
			Name = "ItemContainer"
		}), {
			MakeElement("List", 0, 6),
			MakeElement("Padding", 15, 10, 10, 15)
		}), "Divider")

		AddConnection(Container.UIListLayout:GetPropertyChangedSignal("AbsoluteContentSize"), function()
			Container.CanvasSize = UDim2.new(0, 0, 0, Container.UIListLayout.AbsoluteContentSize.Y + 30)
		end)

		if FirstTab then
			FirstTab = false
			if TabConfig.Icon ~= "" then
				TabButton:FindFirstChildWhichIsA("ImageLabel").ImageTransparency = 0
			end
			TabLabel.TextTransparency = 0
			TabLabel.Font = Enum.Font.GothamBlack
			Container.Visible = true
		end    

		AddConnection(TabButton.MouseButton1Click, function()
			-- Reset semua tab
			for _, Tab in next, TabScroll:GetChildren() do
				if Tab:IsA("TextButton") then
					local label = Tab:FindFirstChildWhichIsA("TextLabel")
					if label then
						label.Font = Enum.Font.GothamSemibold
						label.TextTransparency = 0.4
					end
					local icon = Tab:FindFirstChildWhichIsA("ImageLabel")
					if icon then
						TweenService:Create(icon, TweenInfo.new(0.25, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {ImageTransparency = 0.4}):Play()
					end
					TweenService:Create(Tab, TweenInfo.new(0.25, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {BackgroundTransparency = 0.7}):Play()
				end    
			end
			
			-- Sembunyikan semua container
			for _, ItemContainer in next, ContentScroll:GetChildren() do
				if ItemContainer:IsA("ScrollingFrame") then
					ItemContainer.Visible = false
				end    
			end  
			
			-- Highlight tab yang dipilih
			if TabConfig.Icon ~= "" then
				TweenService:Create(TabButton:FindFirstChildWhichIsA("ImageLabel"), TweenInfo.new(0.25, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {ImageTransparency = 0}):Play()
			end
			TweenService:Create(TabLabel, TweenInfo.new(0.25, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {TextTransparency = 0}):Play()
			TweenService:Create(TabButton, TweenInfo.new(0.25, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {BackgroundTransparency = 0}):Play()
			TabLabel.Font = Enum.Font.GothamBlack
			Container.Visible = true   
		end)

		-- PAKAI FUNGSI GETELEMENTS YANG ASLI DARI NEXUS UI
		-- (yang sudah ada semua elemen: AddLabel, AddToggle, AddSlider, AddButton, dll)
		local function GetElements(ItemParent)
			-- Copy fungsi GetElements dari Nexus UI yang asli di sini
			-- ... (isi dengan kode GetElements yang asli)
		end

		local ElementFunction = {}

		function ElementFunction:AddSection(SectionConfig)
			-- Pakai fungsi AddSection dari Nexus UI asli
		end	

		for i, v in next, GetElements(Container) do
			ElementFunction[i] = v 
		end

		if TabConfig.PremiumOnly then
			-- Premium lock system
			for i, v in next, ElementFunction do
				ElementFunction[i] = function() end
			end    
			
			Container:ClearAllChildren()
			
			local PremiumFrame = Instance.new("Frame", Container)
			PremiumFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
			PremiumFrame.BorderSizePixel = 0
			PremiumFrame.Size = UDim2.new(1, 0, 1, 0)
			PremiumFrame.BackgroundTransparency = 0.7
			
			local PremiumCorner = Instance.new("UICorner", PremiumFrame)
			PremiumCorner.CornerRadius = UDim.new(0, 6)
			
			local PremiumStroke = Instance.new("UIStroke", PremiumFrame)
			PremiumStroke.Color = Color3.fromRGB(255, 0, 0)
			PremiumStroke.Thickness = 1
			
			-- Isi premium lock content
		end
		return ElementFunction   
	end  
	
	return TabFunction
end   

function NexusUI:Destroy()
	Nexus:Destroy()
end

function NexusUI:ToggleUi()
	Nexus.Enabled = not Nexus.Enabled
end

--==================================================
-- NEXUS UI TOGGLE BUTTON
-- ANTI DUPLICATE | TOP CENTER | DRAGGABLE
--==================================================

-- SERVICES
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

--==================================================
-- REMOVE OLD TOGGLE (ANTI DUPLICATE)
--==================================================
local oldToggle = playerGui:FindFirstChild("NexusUIToggle")
if oldToggle then
    oldToggle:Destroy()
end

--==================================================
-- SCREEN GUI
--==================================================
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "NexusUIToggle"
screenGui.Parent = playerGui
screenGui.ResetOnSpawn = false
screenGui.DisplayOrder = 9999

--==================================================
-- TOGGLE BUTTON
--==================================================
local toggleButton = Instance.new("ImageButton")
toggleButton.Parent = screenGui
toggleButton.Size = UDim2.new(0, 50, 0, 50)
toggleButton.BackgroundColor3 = Color3.fromRGB(25, 25, 30)
toggleButton.AutoButtonColor = false

-- POSISI ATAS TENGAH (LEBIH KE ATAS)
toggleButton.AnchorPoint = Vector2.new(0.5, 0)
toggleButton.Position = UDim2.new(0.5, 0, 0, 5)

-- ICON
toggleButton.Image = "http://www.roblox.com/asset/?id=82528573041751"

--==================================================
-- UI CORNER
--==================================================
local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0.25, 0)
uiCorner.Parent = toggleButton

--==================================================
-- UI STROKE
--==================================================
local uiStroke = Instance.new("UIStroke")
uiStroke.Parent = toggleButton
uiStroke.Color = Color3.fromRGB(100, 70, 255)
uiStroke.Thickness = 2
uiStroke.Transparency = 0.3

--==================================================
-- TOGGLE NEXUS UI
--==================================================
local isUIOpen = true

toggleButton.MouseButton1Click:Connect(function()
    if NexusUI and NexusUI.ToggleUi then
        NexusUI:ToggleUi()
        isUIOpen = not isUIOpen

        TweenService:Create(
            toggleButton,
            TweenInfo.new(0.25, Enum.EasingStyle.Quad),
            { Rotation = isUIOpen and 0 or 180 }
        ):Play()
    end
end)

--==================================================
-- HOVER EFFECT (PC SAFE)
--==================================================
toggleButton.MouseEnter:Connect(function()
    TweenService:Create(toggleButton, TweenInfo.new(0.2), {
        BackgroundColor3 = Color3.fromRGB(35, 35, 40),
        Size = UDim2.new(0, 52, 0, 52)
    }):Play()

    TweenService:Create(uiStroke, TweenInfo.new(0.2), {
        Transparency = 0
    }):Play()
end)

toggleButton.MouseLeave:Connect(function()
    TweenService:Create(toggleButton, TweenInfo.new(0.2), {
        BackgroundColor3 = Color3.fromRGB(25, 25, 30),
        Size = UDim2.new(0, 50, 0, 50)
    }):Play()

    TweenService:Create(uiStroke, TweenInfo.new(0.2), {
        Transparency = 0.3
    }):Play()
end)

--==================================================
-- DRAGGABLE (MOBILE + PC)
--==================================================
local dragging = false
local dragStart
local startPos

local function update(input)
    local delta = input.Position - dragStart
    toggleButton.Position = UDim2.new(
        startPos.X.Scale,
        startPos.X.Offset + delta.X,
        startPos.Y.Scale,
        startPos.Y.Offset + delta.Y
    )
end

toggleButton.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1
    or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = toggleButton.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

toggleButton.InputChanged:Connect(function(input)
    if dragging and (
        input.UserInputType == Enum.UserInputType.MouseMovement
        or input.UserInputType == Enum.UserInputType.Touch
    ) then
        update(input)
    end
end)

--==================================================
-- SAFETY
--==================================================
if not NexusUI then
    warn("NexusUI belum diload, toggle hanya visual.")
end

return NexusUI
