                return Button
            end    
            
            function ElementFunction:AddToggle(ToggleConfig)
                ToggleConfig = ToggleConfig or {}
                ToggleConfig.Name = ToggleConfig.Name or "Toggle"
                ToggleConfig.Default = ToggleConfig.Default or false
                ToggleConfig.Callback = ToggleConfig.Callback or function() end

                local Toggle = {Value = ToggleConfig.Default}

                local Click = SetProps(MakeElement("TextButton"), {
                    Size = UDim2.new(1, 0, 1, 0),
                    BackgroundTransparency = 1,
                    Text = "",
                    AutoButtonColor = false
                })

                local ToggleBox = SetChildren(SetProps(MakeElement("Frame", ToggleConfig.Default and Color3.fromRGB(0, 255, 0) or ThemeColors.Divider, 0), {
                    Size = UDim2.new(0, 38, 0, 34),
                    Position = UDim2.new(1, -40, 0.5, 0),
                    AnchorPoint = Vector2.new(1, 0.5)
                }), {
                    MakeCorner(ToggleBox, 4),
                    SetProps(MakeElement("Frame", ThemeColors.Stroke), {
                        Size = UDim2.new(1, 0, 1, 0)
                    })
                })

                local ToggleFrame = SetChildren(SetProps(MakeElement("Frame", ThemeColors.Second, 0), {
                    Size = UDim2.new(1, 0, 0, 38),
                    Parent = ItemParent
                }), {
                    MakeCorner(ToggleFrame, 6),
                    SetProps(MakeElement("TextLabel", ToggleConfig.Name, 15), {
                        Size = UDim2.new(1, -12, 1, 0),
                        Position = UDim2.new(0, 12, 0, 0),
                        Font = Enum.Font.GothamBold,
                        Name = "Content",
                        BackgroundTransparency = 1,
                        TextColor3 = ThemeColors.Text
                    }),
                    SetProps(MakeElement("Frame", ThemeColors.Stroke), {
                        Size = UDim2.new(1, 0, 0, 2),
                        Position = UDim2.new(0, 0, 1, 0)
                    }),
                    ToggleBox,
                    Click
                })

                function Toggle:Set(Value)
                    Toggle.Value = Value
                    game:GetService("TweenService"):Create(ToggleBox, TweenInfo.new(0.3, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {BackgroundColor3 = Toggle.Value and Color3.fromRGB(0, 255, 0) or ThemeColors.Divider}):Play()
                    ToggleConfig.Callback(Toggle.Value)
                end    

                Toggle:Set(Toggle.Value)

                AddConnection(Click.MouseEnter, function()
                    game:GetService("TweenService"):Create(ToggleFrame, TweenInfo.new(0.25, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {BackgroundColor3 = Color3.fromRGB(ThemeColors.Second.R * 255 + 8, ThemeColors.Second.G * 255 + 8, ThemeColors.Second.B * 255 + 8)}):Play()
                end)

                AddConnection(Click.MouseLeave, function()
                    game:GetService("TweenService"):Create(ToggleFrame, TweenInfo.new(0.25, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {BackgroundColor3 = ThemeColors.Second}):Play()
                end)

                AddConnection(Click.MouseButton1Up, function()
                    game:GetService("TweenService"):Create(ToggleFrame, TweenInfo.new(0.25, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {BackgroundColor3 = Color3.fromRGB(ThemeColors.Second.R * 255 + 8, ThemeColors.Second.G * 255 + 8, ThemeColors.Second.B * 255 + 8)}):Play()
                    Toggle:Set(not Toggle.Value)
                end)

                AddConnection(Click.MouseButton1Down, function()
                    game:GetService("TweenService"):Create(ToggleFrame, TweenInfo.new(0.25, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {BackgroundColor3 = Color3.fromRGB(ThemeColors.Second.R * 255 + 12, ThemeColors.Second.G * 255 + 12, ThemeColors.Second.B * 255 + 12)}):Play()
                end)

                return Toggle
            end  
            
            function ElementFunction:AddSlider(SliderConfig)
                SliderConfig = SliderConfig or {}
                SliderConfig.Name = SliderConfig.Name or "Slider"
                SliderConfig.Min = SliderConfig.Min or 0
                SliderConfig.Max = SliderConfig.Max or 100
                SliderConfig.Default = SliderConfig.Default or 50
                SliderConfig.Callback = SliderConfig.Callback or function() end

                local Slider = {Value = SliderConfig.Default}
                local Dragging = false

                local SliderDrag = SetChildren(SetProps(MakeElement("Frame", ThemeColors.Stroke, 0), {
                    Size = UDim2.new((SliderConfig.Default - SliderConfig.Min) / (SliderConfig.Max - SliderConfig.Min), 0, 1, 0),
                    BackgroundTransparency = 0.3,
                    ClipsDescendants = true
                }), {
                    MakeCorner(SliderDrag, 5),
                    SetProps(MakeElement("TextLabel", tostring(SliderConfig.Default), 13), {
                        Size = UDim2.new(1, -12, 0, 14),
                        Position = UDim2.new(0, 12, 0, 6),
                        Font = Enum.Font.GothamBold,
                        Name = "Value",
                        TextColor3 = ThemeColors.Text,
                        BackgroundTransparency = 1
                    })
                })

                local SliderBar = SetChildren(SetProps(MakeElement("Frame", ThemeColors.Stroke, 0), {
                    Size = UDim2.new(1, -24, 0, 22),
                    Position = UDim2.new(0, 12, 0, 26),
                    BackgroundTransparency = 0.9
                }), {
                    MakeCorner(SliderBar, 5),
                    SetProps(MakeElement("Frame", ThemeColors.Stroke), {
                        Size = UDim2.new(1, 0, 0, 2),
                        Position = UDim2.new(0, 0, 1, 0)
                    }),
                    SetProps(MakeElement("TextLabel", tostring(SliderConfig.Default), 13), {
                        Size = UDim2.new(1, -12, 0, 14),
                        Position = UDim2.new(0, 12, 0, 6),
                        Font = Enum.Font.GothamBold,
                        Name = "Value",
                        TextColor3 = ThemeColors.Text,
                        TextTransparency = 0.8,
                        BackgroundTransparency = 1
                    }),
                    SliderDrag
                })

                local SliderFrame = SetChildren(SetProps(MakeElement("Frame", ThemeColors.Second, 0), {
                    Size = UDim2.new(1, 0, 0, 58),
                    Parent = ItemParent
                }), {
                    MakeCorner(SliderFrame, 6),
                    SetProps(MakeElement("TextLabel", SliderConfig.Name, 15), {
                        Size = UDim2.new(1, -12, 0, 14),
                        Position = UDim2.new(0, 12, 0, 10),
                        Font = Enum.Font.GothamBold,
                        Name = "Content",
                        BackgroundTransparency = 1,
                        TextColor3 = ThemeColors.Text
                    }),
                    SetProps(MakeElement("Frame", ThemeColors.Stroke), {
                        Size = UDim2.new(1, 0, 0, 2),
                        Position = UDim2.new(0, 0, 1, 0)
                    }),
                    SliderBar
                })

                SliderBar.InputBegan:Connect(function(Input)
                    if Input.UserInputType == Enum.UserInputType.MouseButton1 or Input.UserInputType == Enum.UserInputType.Touch then 
                        Dragging = true 
                    end 
                end)
                
                SliderBar.InputEnded:Connect(function(Input) 
                    if Input.UserInputType == Enum.UserInputType.MouseButton1 or Input.UserInputType == Enum.UserInputType.Touch then 
                        Dragging = false 
                    end 
                end)

                game:GetService("UserInputService").InputChanged:Connect(function(Input)
                    if Dragging then 
                        local SizeScale = math.clamp((Input.Position.X - SliderBar.AbsolutePosition.X) / SliderBar.AbsoluteSize.X, 0, 1)
                        Slider:Set(SliderConfig.Min + ((SliderConfig.Max - SliderConfig.Min) * SizeScale)) 
                    end
                end)

                function Slider:Set(Value)
                    self.Value = math.clamp(math.floor(Value), SliderConfig.Min, SliderConfig.Max)
                    game:GetService("TweenService"):Create(SliderDrag, TweenInfo.new(.15, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {Size = UDim2.new((self.Value - SliderConfig.Min) / (SliderConfig.Max - SliderConfig.Min), 0, 1, 0)}):Play()
                    SliderBar.Value.Text = tostring(self.Value)
                    SliderDrag.Value.Text = tostring(self.Value)
                    SliderConfig.Callback(self.Value)
                end      

                Slider:Set(Slider.Value)
                return Slider
            end

            return ElementFunction   
        end	

        local ElementFunction = {}

        function ElementFunction:AddSection(SectionConfig)
            SectionConfig = SectionConfig or {}
            SectionConfig.Name = SectionConfig.Name or "Section"

            local SectionFrame = SetChildren(SetProps(MakeElement("Frame"), {
                Size = UDim2.new(1, 0, 0, 28),
                Parent = Container,
                BackgroundTransparency = 1
            }), {
                SetProps(MakeElement("TextLabel", SectionConfig.Name, 14), {
                    Size = UDim2.new(1, -12, 0, 16),
                    Position = UDim2.new(0, 0, 0, 4),
                    Font = Enum.Font.GothamSemibold,
                    BackgroundTransparency = 1,
                    TextColor3 = ThemeColors.TextDark
                }),
                SetChildren(SetProps(MakeElement("Frame"), {
                    AnchorPoint = Vector2.new(0, 0),
                    Size = UDim2.new(1, 0, 1, -24),
                    Position = UDim2.new(0, 0, 0, 23),
                    Name = "Holder",
                    BackgroundTransparency = 1
                }), {
                    MakeLayout(SectionFrame.Holder, 12)
                }),
            })

            AddConnection(SectionFrame.Holder.UIListLayout:GetPropertyChangedSignal("AbsoluteContentSize"), function()
                SectionFrame.Size = UDim2.new(1, 0, 0, SectionFrame.Holder.UIListLayout.AbsoluteContentSize.Y + 31)
                SectionFrame.Holder.Size = UDim2.new(1, 0, 0, SectionFrame.Holder.UIListLayout.AbsoluteContentSize.Y)
            end)

            local SectionFunction = {}
            for i, v in next, GetElements(SectionFrame.Holder) do
                SectionFunction[i] = v 
            end
            return SectionFunction
        end	

        for i, v in next, GetElements(Container) do
            ElementFunction[i] = v 
        end

        return ElementFunction   
    end  
    
    return TabFunction
end   

function NexusUI:Destroy()
	Nexus:Destroy()
end

function NexusUI:ToggleUi()
	Nexus.Enabled = not Nexus.Enabled
end

--==================================================
-- NEXUS UI TOGGLE BUTTON
-- ANTI DUPLICATE | TOP CENTER | DRAGGABLE
--==================================================

-- SERVICES
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

--==================================================
-- REMOVE OLD TOGGLE (ANTI DUPLICATE)
--==================================================
local oldToggle = playerGui:FindFirstChild("NexusUIToggle")
if oldToggle then
    oldToggle:Destroy()
end

--==================================================
-- SCREEN GUI
--==================================================
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "NexusUIToggle"
screenGui.Parent = playerGui
screenGui.ResetOnSpawn = false
screenGui.DisplayOrder = 9999

--==================================================
-- TOGGLE BUTTON
--==================================================
local toggleButton = Instance.new("ImageButton")
toggleButton.Parent = screenGui
toggleButton.Size = UDim2.new(0, 50, 0, 50)
toggleButton.BackgroundColor3 = Color3.fromRGB(25, 25, 30)
toggleButton.AutoButtonColor = false

-- POSISI ATAS TENGAH (LEBIH KE ATAS)
toggleButton.AnchorPoint = Vector2.new(0.5, 0)
toggleButton.Position = UDim2.new(0.5, 0, 0, 5)

-- ICON
toggleButton.Image = "http://www.roblox.com/asset/?id=82528573041751"

--==================================================
-- UI CORNER
--==================================================
local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0.25, 0)
uiCorner.Parent = toggleButton

--==================================================
-- UI STROKE
--==================================================
local uiStroke = Instance.new("UIStroke")
uiStroke.Parent = toggleButton
uiStroke.Color = Color3.fromRGB(100, 70, 255)
uiStroke.Thickness = 2
uiStroke.Transparency = 0.3

--==================================================
-- TOGGLE NEXUS UI
--==================================================
local isUIOpen = true

toggleButton.MouseButton1Click:Connect(function()
    if NexusUI and NexusUI.ToggleUi then
        NexusUI:ToggleUi()
        isUIOpen = not isUIOpen

        TweenService:Create(
            toggleButton,
            TweenInfo.new(0.25, Enum.EasingStyle.Quad),
            { Rotation = isUIOpen and 0 or 180 }
        ):Play()
    end
end)

--==================================================
-- HOVER EFFECT (PC SAFE)
--==================================================
toggleButton.MouseEnter:Connect(function()
    TweenService:Create(toggleButton, TweenInfo.new(0.2), {
        BackgroundColor3 = Color3.fromRGB(35, 35, 40),
        Size = UDim2.new(0, 52, 0, 52)
    }):Play()

    TweenService:Create(uiStroke, TweenInfo.new(0.2), {
        Transparency = 0
    }):Play()
end)

toggleButton.MouseLeave:Connect(function()
    TweenService:Create(toggleButton, TweenInfo.new(0.2), {
        BackgroundColor3 = Color3.fromRGB(25, 25, 30),
        Size = UDim2.new(0, 50, 0, 50)
    }):Play()

    TweenService:Create(uiStroke, TweenInfo.new(0.2), {
        Transparency = 0.3
    }):Play()
end)

--==================================================
-- DRAGGABLE (MOBILE + PC)
--==================================================
local dragging = false
local dragStart
local startPos

local function update(input)
    local delta = input.Position - dragStart
    toggleButton.Position = UDim2.new(
        startPos.X.Scale,
        startPos.X.Offset + delta.X,
        startPos.Y.Scale,
        startPos.Y.Offset + delta.Y
    )
end

toggleButton.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1
    or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = toggleButton.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

toggleButton.InputChanged:Connect(function(input)
    if dragging and (
        input.UserInputType == Enum.UserInputType.MouseMovement
        or input.UserInputType == Enum.UserInputType.Touch
    ) then
        update(input)
    end
end)

--==================================================
-- SAFETY
--==================================================
if not NexusUI then
    warn("NexusUI belum diload, toggle hanya visual.")
end

return NexusUI
