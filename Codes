    -- Tambahkan stroke ke main window
    MakeStroke(MainWindow)

    -- Fungsi drag window
    local function AddDraggingFunctionality(dragPoint, window)
        local dragging = false
        local dragInput
        local dragStart
        local startPos
        
        local function update(input)
            local delta = input.Position - dragStart
            window.Position = UDim2.new(
                startPos.X.Scale, 
                startPos.X.Offset + delta.X,
                startPos.Y.Scale, 
                startPos.Y.Offset + delta.Y
            )
        end
        
        dragPoint.InputBegan:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
                dragging = true
                dragStart = input.Position
                startPos = window.Position
                
                input.Changed:Connect(function()
                    if input.UserInputState == Enum.UserInputState.End then
                        dragging = false
                    end
                end)
            end
        end)
        
        dragPoint.InputChanged:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
                dragInput = input
            end
        end)
        
        game:GetService("UserInputService").InputChanged:Connect(function(input)
            if input == dragInput and dragging then
                update(input)
            end
        end)
    end

    AddDraggingFunctionality(DragPoint, MainWindow)

    AddConnection(CloseBtn.MouseButton1Up, function()
        MainWindow.Visible = false
        UIHidden = true
        -- Untuk sementara, tampilkan notifikasi di output
        print("Interface Hidden - Tap RightShift to reopen the interface")
        WindowConfig.CloseCallback()
    end)

    AddConnection(game:GetService("UserInputService").InputBegan, function(Input)
        if Input.KeyCode == Enum.KeyCode.RightShift and UIHidden then
            MainWindow.Visible = true
        end
    end)

    AddConnection(MinimizeBtn.MouseButton1Up, function()
        if Minimized then
            game:GetService("TweenService"):Create(MainWindow, TweenInfo.new(0.5, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {Size = UDim2.new(0, 536, 0, 282)}):Play()
            MinimizeBtn.Ico.Image = "rbxassetid://7072719338"
            wait(.02)
            MainWindow.ClipsDescendants = false
            WindowStuff.Visible = true
            WindowTopBarLine.Visible = true
        else
            MainWindow.ClipsDescendants = true
            WindowTopBarLine.Visible = false
            MinimizeBtn.Ico.Image = "rbxassetid://7072720870"

            game:GetService("TweenService"):Create(MainWindow, TweenInfo.new(0.5, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {Size = UDim2.new(0, WindowName.TextBounds.X + 140, 0, 52)}):Play()
            wait(0.1)
            WindowStuff.Visible = false    
        end
        Minimized = not Minimized    
    end)

    -- Intro Sequence
    local function LoadSequence()
        MainWindow.Visible = false
        
        local GUI_NAME = "NexusUI"
        local FULL_TEXT = "Nexus\nUI"
        local TYPE_SPEED = 0.05
        local SHOW_DELAY = 0.5
        local HIDE_DELAY = 1.5
        
        -- Create GUI
        local ScreenGui = Instance.new("ScreenGui")
        ScreenGui.Name = GUI_NAME
        ScreenGui.Parent = Nexus
        ScreenGui.ResetOnSpawn = false
        
        -- FRAME
        local Frame = Instance.new("Frame", ScreenGui)
        Frame.Name = "FrameAnimasi"
        Frame.Size = UDim2.new(0,150,0,44)
        Frame.Position = UDim2.new(0.5,-75,0.4,0)
        Frame.BackgroundColor3 = Color3.fromRGB(20,20,20)
        Frame.BorderSizePixel = 0
        Frame.BackgroundTransparency = 1
        
        -- Add corner
        local UICorner = Instance.new("UICorner", Frame)
        UICorner.CornerRadius = UDim.new(0, 8)
        
        -- GRADIENT
        local Gradient = Instance.new("UIGradient", Frame)
        Gradient.Color = ColorSequence.new{
            ColorSequenceKeypoint.new(0, Color3.fromRGB(30,30,30)),
            ColorSequenceKeypoint.new(1, Color3.fromRGB(10,10,10))
        }
        
        -- STROKE
        local Stroke = Instance.new("UIStroke", Frame)
        Stroke.Color = Color3.fromRGB(255,60,60)
        Stroke.Thickness = 2
        Stroke.Transparency = 1
        
        -- ICON
        local Image = Instance.new("ImageLabel", Frame)
        Image.Size = UDim2.new(0,34,0,34)
        Image.Position = UDim2.new(0,6,0.5,-17)
        Image.Image = "rbxassetid://82528573041751"
        Image.BackgroundTransparency = 1
        Image.ImageTransparency = 1
        
        local ImageCorner = Instance.new("UICorner", Image)
        ImageCorner.CornerRadius = UDim.new(0, 6)
        
        -- LINE
        local Line = Instance.new("Frame", Frame)
        Line.Size = UDim2.new(0,2,1,-8)
        Line.Position = UDim2.new(0,48,0,4)
        Line.BackgroundColor3 = Color3.fromRGB(255,60,60)
        Line.BorderSizePixel = 0
        Line.BackgroundTransparency = 1
        
        -- TEXT
        local Text = Instance.new("TextLabel", Frame)
        Text.Position = UDim2.new(0,54,0,4)
        Text.Size = UDim2.new(1,-58,1,-8)
        Text.BackgroundTransparency = 1
        Text.TextColor3 = Color3.fromRGB(255,255,255)
        Text.Font = Enum.Font.GothamBold
        Text.TextSize = 16
        Text.TextWrapped = true
        Text.TextXAlignment = Enum.TextXAlignment.Center
        Text.TextYAlignment = Enum.TextYAlignment.Center
        Text.TextTransparency = 1
        Text.Text = ""
        
        -- posisi awal
        Frame.Position = Frame.Position + UDim2.new(0,-50,0,0)
        
        local InInfo = TweenInfo.new(0.6, Enum.EasingStyle.Quint, Enum.EasingDirection.Out)
        local OutInfo = TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.In)
        
        local function tween(obj, info, props)
            game:GetService("TweenService"):Create(obj, info, props):Play()
        end
        
        local function typeText(label, text, speed)
            label.Text = ""
            label.TextTransparency = 0
            for i = 1, #text do
                label.Text = string.sub(text,1,i)
                task.wait(speed)
            end
        end
        
        task.wait(SHOW_DELAY)
        
        Frame.Visible = true
        tween(Frame, InInfo, {
            BackgroundTransparency = 0,
            Position = Frame.Position + UDim2.new(0,50,0,0)
        })
        
        tween(Stroke, InInfo, {Transparency = 0})
        tween(Image, InInfo, {ImageTransparency = 0})
        tween(Line, InInfo, {BackgroundTransparency = 0})
        
        task.wait(0.5)
        typeText(Text, FULL_TEXT, TYPE_SPEED)
        
        task.wait(HIDE_DELAY)
        
        tween(Text, OutInfo, {TextTransparency = 1})
        tween(Image, OutInfo, {ImageTransparency = 1})
        tween(Line, OutInfo, {BackgroundTransparency = 1})
        tween(Stroke, OutInfo, {Transparency = 1})
        tween(Frame, OutInfo, {
            BackgroundTransparency = 1,
            Position = Frame.Position + UDim2.new(0,30,0,0)
        })
        
        task.wait(0.6)
        if ScreenGui then
            ScreenGui:Destroy()
        end
        
        MainWindow.Visible = true
    end

    if WindowConfig.IntroEnabled then
        spawn(LoadSequence)
    else
        MainWindow.Visible = true
    end

    local TabFunction = {}
    function TabFunction:MakeTab(TabConfig)
        TabConfig = TabConfig or {}
        TabConfig.Name = TabConfig.Name or "Tab"
        TabConfig.Icon = TabConfig.Icon or ""
        TabConfig.PremiumOnly = TabConfig.PremiumOnly or false

        local TabFrame = SetChildren(SetProps(MakeElement("TextButton"), {
            Size = UDim2.new(1, -20, 0, 32),
            Parent = TabHolder,
            ZIndex = 6,
            BackgroundColor3 = ThemeColors.Second,
            AutoButtonColor = false,
            Text = ""
        }), {
            MakeCorner(TabFrame, 6),
            SetProps(MakeElement("TextLabel", TabConfig.Name, 14), {
                Size = UDim2.new(1, -10, 1, 0),
                Position = UDim2.new(0, 10, 0, 0),
                Font = Enum.Font.GothamSemibold,
                TextColor3 = ThemeColors.Text,
                TextTransparency = 0.4,
                Name = "Title",
                ZIndex = 7,
                BackgroundTransparency = 1
            })
        })

        -- Store tab for search functionality
        TabButtons[TabConfig.Name] = TabFrame

        local Container = SetChildren(SetProps(MakeElement("ScrollingFrame"), {
            Size = UDim2.new(1, -130, 1, -52),
            Position = UDim2.new(0, 130, 0, 52),
            Parent = MainWindow,
            Visible = false,
            Name = "ItemContainer",
            BackgroundTransparency = 1,
            ScrollBarThickness = 5,
            ScrollBarImageColor3 = ThemeColors.Stroke
        }), {
            MakeLayout(Container, 12),
            MakePadding(Container, 12, 12, 12, 12)
        })

        AddConnection(Container.UIListLayout:GetPropertyChangedSignal("AbsoluteContentSize"), function()
            Container.CanvasSize = UDim2.new(0, 0, 0, Container.UIListLayout.AbsoluteContentSize.Y + 30)
        end)

        if FirstTab then
            FirstTab = false
            TabFrame.Title.TextTransparency = 0
            TabFrame.Title.Font = Enum.Font.GothamBlack
            Container.Visible = true
        end    

        AddConnection(TabFrame.MouseButton1Click, function()
            for _, Tab in next, TabHolder:GetChildren() do
                if Tab:IsA("TextButton") then
                    Tab.Title.Font = Enum.Font.GothamSemibold
                    game:GetService("TweenService"):Create(Tab.Title, TweenInfo.new(0.25, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {TextTransparency = 0.4}):Play()
                end    
            end
            for _, ItemContainer in next, MainWindow:GetChildren() do
                if ItemContainer.Name == "ItemContainer" then
                    ItemContainer.Visible = false
                end    
            end  
            game:GetService("TweenService"):Create(TabFrame.Title, TweenInfo.new(0.25, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {TextTransparency = 0}):Play()
            TabFrame.Title.Font = Enum.Font.GothamBlack
            Container.Visible = true   
        end)

        local function GetElements(ItemParent)
            local ElementFunction = {}
            
